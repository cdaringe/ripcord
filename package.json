{
  "name": "ripcord",
  "version": "0.0.6",
  "bin": {
    "ripcord": "bin/ripcord"
  },
  "main": "src/index.js",
  "author": "cdaringe",
  "license": "ISC",
  "dependencies": {
    "counsel": "0.x",
    "counsel-copy": "0.x",
    "counsel-precommit": "0.x",
    "counsel-rule": "0.x",
    "counsel-script": "0.x",
    "perish": "0.0.3"
  },
  "devDependencies": {
    "gh-pages": "^0.11.0",
    "jsdoc": "^3.4.2",
    "license-checker": "^8.0.0",
    "minami": "^1.1.1",
    "nsp": "^2.6.2",
    "nyc": "^8.3.0",
    "perish": "0.0.3",
    "standard": "^8.3.0",
    "tape": "^4.6.2"
  },
  "description": "",
  "ripcord": {
    "isOpenSource": true
  },
  "scripts": {
    "install": "node bin/ripcord counsel apply",
    "validate": "npm ls && ripcord counsel check",
    "lint": "standard",
    "test": "nyc --reporter=lcov node test/",
    "check-coverage": "nyc check-coverage --lines 90 --functions 90 --branches 90",
    "secure": "nsp check",
    "docs": "node scripts/docs.js",
    "preversion": "git checkout master && git pull && npm run validate",
    "publish-patch": "npm run preversion && npm version patch && git push origin master --tags && npm publish",
    "publish-minor": "npm run preversion && npm version minor && git push origin master --tags && npm publish",
    "publish-major": "npm run preversion && npm version major && git push origin master --tags && npm publish",
    "check-licenses": "node scripts/check-licenses.js",
    "postpublish": "npm run docs"
  },
  "pre-commit": [
    "validate",
    "lint",
    "test",
    "check-coverage",
    "check-licenses",
    "secure"
  ]
}
