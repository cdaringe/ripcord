{
  "name": "ripcord",
  "version": "0.0.0-semantically-released",
  "bin": {
    "ripcord": "bin/ripcord"
  },
  "main": "src/index.js",
  "author": "cdaringe",
  "license": "ISC",
  "dependencies": {
    "commander": "^2.9.0",
    "counsel": "0.x",
    "counsel-copy": "0.x",
    "counsel-filename-format": "0.0.17",
    "counsel-precommit": "0.x",
    "counsel-rule": "0.x",
    "counsel-script": "0.x",
    "lodash.kebabcase": "^4.1.1",
    "perish": "0.0.3",
    "snyk-resolve-deps": "^1.7.1"
  },
  "devDependencies": {
    "@semantic-release/condition-codeship": "^1.1.0",
    "@semantic-release/release-notes-generator": "^2.0.0",
    "gh-pages": "^0.11.0",
    "jsdoc": "^3.4.2",
    "license-checker": "^8.0.0",
    "minami": "^1.1.1",
    "nsp": "^2.6.2",
    "nyc": "^8.3.0",
    "perish": "0.0.3",
    "semantic-release": "^4.3.5",
    "standard": "^8.3.0",
    "tape": "^4.6.2"
  },
  "description": "",
  "ripcord": {
    "isOpenSource": true
  },
  "scripts": {
    "install": "node bin/ripcord counsel apply",
    "validate": "npm ls && ripcord counsel check",
    "lint": "standard",
    "test": "nyc --reporter=lcov node test/",
    "check-coverage": "nyc check-coverage --lines 90 --functions 90 --branches 80",
    "secure": "nsp check",
    "docs": "node scripts/docs.js",
    "preversion": "git checkout master && git pull && npm run validate",
    "publish-patch": "npm run preversion && npm version patch && git push origin master --tags && npm publish",
    "publish-minor": "npm run preversion && npm version minor && git push origin master --tags && npm publish",
    "publish-major": "npm run preversion && npm version major && git push origin master --tags && npm publish",
    "check-licenses": "node scripts/check-licenses.js",
    "postpublish": "npm run docs",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "pre-commit": [
    "validate",
    "lint",
    "test",
    "check-coverage",
    "check-licenses",
    "secure"
  ],
  "release": {
    "generateNotes": "./node_modules/@semantic-release/release-notes-generator",
    "verifyConditions": [
      "./node_modules/@semantic-release/condition-codeship"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cdaringe/ripcord.git"
  }
}
