{
  "name": "ripcord",
  "version": "0.0.0-semantically-released",
  "bin": {
    "ripcord": "bin/ripcord.js"
  },
  "main": "src/index.js",
  "author": "cdaringe",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.4.6",
    "chalk": "^2.0.1",
    "commander": "^2.9.0",
    "commander-pojo": "^1.0.1",
    "counsel": "^0.5.2",
    "counsel-precommit": "^0.2.0",
    "counsel-script": "^0.3.0",
    "json2csv": "^3.9.1",
    "license-checker": "^14.0.0",
    "lodash": "^4.17.2",
    "npm": "^5.4.0",
    "parse-name-at-version": "^1.0.0",
    "parse-yarn-lock": "0.28.4",
    "perish": "^1.0.1",
    "pify": "^3.0.0",
    "read-pkg-up": "^2.0.0",
    "request": "^2.75.0",
    "snyk-resolve-deps": "^1.8.0"
  },
  "devDependencies": {
    "@semantic-release/condition-codeship": "^1.1.0",
    "@semantic-release/release-notes-generator": "^3.0.0",
    "@types/node": "^8.0.14",
    "@types/npm": "^2.0.28",
    "ava": "^0.22.0",
    "coveralls": "^2.11.14",
    "fs-extra": "^4.0.1",
    "gh-pages": "^1.0.0",
    "husky": "^0.14.3",
    "jsdoc": "^3.4.3",
    "minami": "^1.1.1",
    "nock": "^9.0.0",
    "npm-run-all": "^4.0.2",
    "nsp": "^2.6.2",
    "nyc": "^11.0.3",
    "resolve-jsdoc-bin": "^1.0.0",
    "semantic-release": "^8.0.0",
    "sinon": "^3.0.0",
    "source-map-support": "^0.4.6",
    "standard": "^10.0.3",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.2.1",
    "webpack": "^3.3.0"
  },
  "description": "project scaffolding and opinion enforcer!",
  "ripcord": {
    "overrides": {
      "preversion-script": null,
      "publish-patch-script": null,
      "publish-minor-script": null,
      "publish-major-script": null
    }
  },
  "scripts": {
    "build": "tsc",
    "install": "node scripts/install.js",
    "validate": "bin/ripcord.js check",
    "lint": "tslint -c tslint.json src/**/*.ts bin/**/*.ts test/**/*.ts",
    "test": "tsc && nyc ava --serial test/**/*.test.js",
    "check-coverage": "nyc check-coverage --lines 80 --functions 80 --branches 60",
    "secure": "nsp check",
    "preversion": "git checkout master && git pull && npm run validate",
    "publish-patch": "npm run preversion && npm version patch && git push origin master --tags && npm publish",
    "publish-minor": "npm run preversion && npm version minor && git push origin master --tags && npm publish",
    "publish-major": "npm run preversion && npm version major && git push origin master --tags && npm publish",
    "check-licenses": "bin/ripcord.js licenses check",
    "postpublish": "npm run docs",
    "scmcycle": "node bin/ripcord.js scmcycle",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "docs": "bin/ripcord.js docs",
    "docs-publish": "bin/ripcord.js docs --publish",
    "check-vulnerablities": "nsp check",
    "precommit": "run-p validate lint test check-vulnerablities",
    "docs:build": "ripcord docs",
    "docs:publish": "ripcord docs --publish"
  },
  "pre-commit": [
    "validate",
    "lint",
    "build",
    "test",
    "check-coverage",
    "secure",
    "docs"
  ],
  "release": {
    "generateNotes": "./node_modules/@semantic-release/release-notes-generator",
    "verifyConditions": [
      "./node_modules/@semantic-release/condition-codeship"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cdaringe/ripcord.git"
  }
}
