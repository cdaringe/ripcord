{
  "name": "ripcord",
  "version": "0.0.0-semantically-released",
  "bin": {
    "ripcord": "bin/ripcord"
  },
  "main": "src/index.js",
  "author": "cdaringe",
  "license": "ISC",
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "counsel": "0.0.21",
    "counsel-copy": "0.0.21",
    "counsel-filename-format": "0.0.21",
    "counsel-precommit": "0.0.21",
    "counsel-rule": "0.0.22",
    "counsel-script": "0.0.10",
    "gh-pages": "^0.12.0",
    "jsdoc": "^3.4.2",
    "json2csv": "^3.7.1",
    "license-checker": "^8.0.0",
    "lodash.get": "^4.4.2",
    "lodash.kebabcase": "^4.1.1",
    "lodash.values": "^4.3.0",
    "minami": "^1.1.1",
    "perish": "0.0.3",
    "pify": "^2.3.0",
    "request": "^2.75.0",
    "requireg": "^0.1.6",
    "resolve-jsdoc-bin": "^1.0.0",
    "snyk-resolve-deps": "^1.8.0"
  },
  "devDependencies": {
    "@semantic-release/condition-codeship": "^1.1.0",
    "@semantic-release/release-notes-generator": "^2.0.0",
    "coveralls": "^2.11.14",
    "license-checker": "^8.0.0",
    "nock": "^9.0.0",
    "nsp": "^2.6.2",
    "nyc": "^10.0.0",
    "perish": "0.0.3",
    "semantic-release": "^6.3.2",
    "sinon": "^1.17.6",
    "standard": "^8.3.0",
    "tape": "^4.6.2"
  },
  "description": "project scaffolding and opinion enforcer!",
  "ripcord": {
    "devOnly": true
  },
  "scripts": {
    "install": "node bin/ripcord counsel apply",
    "validate": "npm ls && bin/ripcord counsel check",
    "lint": "standard",
    "test": "nyc --reporter=lcov node test/",
    "check-coverage": "nyc check-coverage --lines 90 --functions 90 --branches 65",
    "secure": "nsp check",
    "preversion": "git checkout master && git pull && npm run validate",
    "publish-patch": "npm run preversion && npm version patch && git push origin master --tags && npm publish",
    "publish-minor": "npm run preversion && npm version minor && git push origin master --tags && npm publish",
    "publish-major": "npm run preversion && npm version major && git push origin master --tags && npm publish",
    "check-licenses": "bin/ripcord licenses check",
    "postpublish": "npm run docs",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "docs": "bin/ripcord docs",
    "docs-publish": "bin/ripcord docs --publish"
  },
  "pre-commit": [
    "validate",
    "lint",
    "test",
    "check-coverage",
    "check-licenses",
    "secure",
    "docs"
  ],
  "release": {
    "generateNotes": "./node_modules/@semantic-release/release-notes-generator",
    "verifyConditions": [
      "./node_modules/@semantic-release/condition-codeship"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cdaringe/ripcord.git"
  }
}
